{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "registry": "https://registry.npmjs.org/",
  "publishConfig": {
    "access": "public"
  },
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true
    },
    "publish": {
      "allowBranch": [
        "master"
      ]
    }
  }
}
